(install
 (section bin)
 (files compile.exe pretty.exe transform.exe))

(rule
 (targets config.ml)
 (deps    ../config)
 (action  (copy %{deps} %{targets})))

(executable
 (name pretty)
 (libraries core dblayout)
 (flags (:standard -g -bin-annot))
 (preprocess (pps ppx_sexp_conv ppx_let))
 (modules pretty))

(executable
 (name compile)
 (libraries core dblayout)
 (flags (:standard -g -bin-annot))
 (preprocess (pps ppx_sexp_conv ppx_let))
 (modules compile config))

(executable
 (name transform)
 (libraries core postgresql dblayout logs)
 (flags (:standard -g -bin-annot))
 (preprocess (pps ppx_sexp_conv ppx_let))
 (modules transform))

